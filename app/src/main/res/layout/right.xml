<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="300dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/searchbackbtn"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="茶百科"
            android:gravity="center"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/righttopbutton"/>

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0f0"/>
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/searchico"
            android:id="@+id/searchico"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_toRightOf="@id/searchico"
            android:id="@+id/keyword"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:hint="关键字"
            />

        <ImageView
            android:layout_toRightOf="@id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/gosearch"
            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索：   茶"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/shoucangjia"
        android:text="收藏夹"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的收藏"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史访问记录"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/guanyu"
        android:text="关于客户端"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/banquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版权信息"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/adivce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意见反馈"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户登录"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_marginLeft="10dp"/>

</LinearLayout>