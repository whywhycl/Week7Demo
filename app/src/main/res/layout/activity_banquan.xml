<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_banquan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.why.week7demo.BanquanActivity">

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e9e6e6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/searchbackbtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权信息"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/righttopbutton"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#0f0"
        android:layout_below="@+id/rela"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="买买茶.茶百科"
        android:textStyle="bold"
        android:textSize="23sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tea"
        android:text="Android v1.0.2"/>
    <TextView
        android:id="@+id/develop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tea"
        android:layout_marginTop="70dp"
        android:text="Developer：Teacher Liu"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/develop"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="2"
        android:text="        茶百科,字如其名,这里只谈茶!结识茶人,学茶、品茶、悟道、继承传播中国茶文化。教你学会识茶学茶、贮存茶。更能品茶论水、赏茶雅玩。爱品茗。"/>

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="更多"
        android:layout_below="@id/content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:onClick="more"/>
    <ImageView
        android:id="@+id/moreicon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:src="@mipmap/morebtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/content"/>

    <TextView
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/content"
        android:textStyle="bold"
        android:text="Copyright@2010-2013 MaiMaiCha cn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:text="买买茶 版权所有"
        android:textStyle="bold"/>
</RelativeLayout>
